---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  const categories = Array.from(
    new Set(
      posts.map((p) => {
        const raw = (p.data.category ?? '').toString().trim();
        return (raw || 'general').toLowerCase();
      }),
    ),
  );
  return categories.map((category) => ({
    params: { category },
  }));
}

const { category } = Astro.params;
if (!category) {
  throw new Error('Category missing');
}

const categoryKey = (category ?? 'general').toString().trim().toLowerCase();

const posts = (await getCollection('blog')).filter(
  (p) => {
    const raw = (p.data.category ?? '').toString().trim();
    return (raw || 'general').toLowerCase() === categoryKey;
  },
);
posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const formatDate = (d: Date) => {
  const local = new Date(d.getTime() - d.getTimezoneOffset() * 60000);
  return local.toISOString().slice(0, 10); // yyyy-mm-dd
};

const categoryName = category
  .split(' ')
  .map((w) => (w ? w.charAt(0).toUpperCase() + w.slice(1).toLowerCase() : ''))
  .join(' ');
---

<BaseLayout
  title={`${categoryName} | Blog`}
  breadcrumbs={[
    { label: "Home", href: "/" },
    { label: "Blog", href: "/blog" },
    { label: categoryName },
  ]}
>
  <main class="category-page">
    <header class="page-header">
      <h1 class="caps">{categoryName}</h1>
      <p class="lede">All posts filed under {categoryName}.</p>
    </header>

    <ul class="post-list">
      {posts.map((post) => (
        <li class="post-list-item">
          <span class="post-date">{formatDate(post.data.date)}</span>
          <a class="post-title" href={`/blog/${post.slug}/`}>{post.data.title}</a>
        </li>
      ))}
    </ul>
  </main>
</BaseLayout>

<style>
  .category-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 1rem 0 2rem;
  }

  .breadcrumb {
    display: inline-flex;
    gap: 0.4rem;
    align-items: center;
    font-size: 0.95rem;
    color: var(--muted);
  }

  .breadcrumb a {
    color: var(--accent-highlight);
    text-decoration: none;
    font-weight: 700;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .page-header h1 {
    margin: 0 0 0.4rem;
    font-size: clamp(2rem, 4vw, 2.6rem);
  }

  .page-header .lede {
    margin: 0;
    color: var(--muted);
  }

  .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .post-list-item {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 0.75rem;
    align-items: baseline;
  }

  .post-date {
    color: var(--muted);
    font-size: 0.9rem;
    white-space: nowrap;
  }

  .post-title {
    color: var(--text);
    text-decoration: none;
    font-weight: 700;
  }

  .post-title:hover {
    color: var(--accent-highlight);
    text-decoration: underline;
  }
</style>
