---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  const categories = Array.from(
    new Set(posts.map((p) => (p.data.category ?? 'general').toLowerCase())),
  );
  return categories.map((category) => ({
    params: { category },
  }));
}

const { category } = Astro.params;
if (!category) {
  throw new Error('Category missing');
}

const posts = (await getCollection('blog')).filter(
  (p) => (p.data.category ?? 'general').toLowerCase() === category.toLowerCase(),
);
posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const formatDate = (d: Date) =>
  d.toLocaleDateString(undefined, { year: 'numeric', month: 'short', day: '2-digit' });

const titleCase = (s: string) => s.charAt(0).toUpperCase() + s.slice(1);
const categoryName = titleCase(category);
---

<BaseLayout title={`${categoryName} | Blog`}>
  <main class="category-page">
    <header class="page-header">
      <h1>{categoryName}</h1>
      <p class="lede">All posts filed under {categoryName}.</p>
    </header>

    <ul class="post-list">
      {posts.map((post) => (
        <li class="post-list-item">
          <span class="post-date">{formatDate(post.data.date)}</span>
          <a class="post-title" href={`/blog/${post.slug}/`}>{post.data.title}</a>
        </li>
      ))}
    </ul>
  </main>
</BaseLayout>

<style>
  .category-page {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 1rem 0 2rem;
  }

  .page-header h1 {
    margin: 0 0 0.4rem;
    font-size: clamp(2rem, 4vw, 2.6rem);
  }

  .page-header .lede {
    margin: 0;
    color: var(--muted);
  }

  .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .post-list-item {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 0.75rem;
    align-items: baseline;
  }

  .post-date {
    color: var(--muted);
    font-size: 0.9rem;
    white-space: nowrap;
  }

  .post-title {
    color: var(--text);
    text-decoration: none;
    font-weight: 700;
  }

  .post-title:hover {
    color: var(--accent-highlight);
    text-decoration: underline;
  }
</style>
