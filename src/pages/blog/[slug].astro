---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const normalizeCategory = (value?: string) => {
  const raw = (value ?? '').toString().trim();
  const base = raw || 'general';
  const labelSource =
    base.includes('-') && !base.includes(' ')
      ? base.replace(/-/g, ' ')
      : base;
  const words = labelSource
    .split(/\s+/)
    .filter(Boolean)
    .map((w) => w.charAt(0).toUpperCase() + w.slice(1).toLowerCase());
  const label = words.join(' ') || 'General';
  const slug =
    labelSource
      .toLowerCase()
      .replace(/[^a-z0-9]+/g, '-')
      .replace(/^-+|-+$/g, '') || 'general';
  return { slug, label };
};

const { slug: categorySlug, label: categoryLabel } = normalizeCategory(post.data.category);

const formatDate = (d: Date) =>
  d.toLocaleDateString(undefined, { year: 'numeric', month: 'long', day: 'numeric' });
---

<BaseLayout
  title={`${post.data.title} | Blog`}
  breadcrumbs={[
    { label: "Home", href: "/" },
    { label: "Blog", href: "/blog" },
    {
      label: categoryLabel,
      href: `/blog/${categorySlug}/`,
    },
    { label: post.data.title },
  ]}
>
  <main class="post-page">
    <header class="post-header">
      <p class="post-date">{formatDate(post.data.date)}</p>
      <h1>{post.data.title}</h1>
      {post.data.tags && post.data.tags.length > 0 && (
        <div class="tag-row">
          {post.data.tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
      <hr />
    </header>

    <article class="prose-content">
      <Content />
    </article>
  </main>
</BaseLayout>

<style>
  .post-page {
    padding: 1rem 0 3rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .breadcrumb {
    display: inline-flex;
    gap: 0.4rem;
    align-items: center;
    font-size: 0.95rem;
    color: var(--muted);
  }

  .breadcrumb a {
    color: var(--accent-highlight);
    text-decoration: none;
    font-weight: 700;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .post-header h1 {
    margin: 0.2rem 0 0.5rem;
    font-size: clamp(2rem, 4vw, 2.8rem);
  }

  .post-date {
    margin: 0;
    color: var(--muted);
    font-size: 0.95rem;
  }

  .tag-row {
    display: flex;
    gap: 0.4rem;
    flex-wrap: wrap;
    margin: 0.3rem 0 0.6rem;
  }

  .tag {
    padding: 0.2rem 0.6rem;
    border-radius: var(--radius-sm);
    border: 1px solid var(--border);
    color: var(--muted);
    font-size: 0.85rem;
  }

  hr {
    border: none;
    border-top: 1px solid var(--border);
    margin: 0.5rem 0 0;
  }

  .prose-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .prose-content :global(p) {
    margin: 0 0 1rem;
    line-height: 1.7;
  }

  .prose-content :global(a) {
    color: var(--accent-highlight);
  }
</style>
